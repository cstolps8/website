<div class="container article-container" >
    <div class="" style="height: 100vh;">
        <h1 class="display-4"><%= articles.title %></h1>
        <p class="lead"><%= articles.author %> - <%= articles.date %></p>
        <%- JSON.stringify(articles.about).replace(/['"]+/g, '') %>
        <hr class="my-4">

        <!-- Check to see if its a pdf or markdown file and display the correct  -->
        <% if (articles.content.type === "pdf" ) { %>
            <iframe class="pdfView" src="/articles/<%=articles.content.file%>#toolbar=0" width="100%" height="1000px" type="application/pdf" scrolling="auto"></iframe>
        <% } %>

        <% if( articles.content.type === "markdown") { %>
            <%- renderedMarkdown %>
        <% } %> 
        
        <% if( articles.content.type === "video") { %>
            <p> <%=articles.content.file%></p>
        <% } %>
      </div>
</div>

